<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/mylocation_listitem_horizontal_margin"
        android:layout_marginRight="@dimen/mylocation_listitem_horizontal_margin"
        android:layout_marginStart="@dimen/mylocation_listitem_horizontal_margin"
        android:layout_marginEnd="@dimen/mylocation_listitem_horizontal_margin"
        android:layout_marginBottom="@dimen/mylocation_listitem_vertical_margin"
        android:layout_marginTop="@dimen/mylocation_listitem_vertical_margin"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/darkGrey"
        android:text="@string/app_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkGrey"
        android:layout_below="@id/title"/>


</RelativeLayout>