<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_row_background"
        android:layout_marginLeft="@dimen/mylocation_listitem_horizontal_margin"
        android:layout_marginRight="@dimen/mylocation_listitem_horizontal_margin"
        android:layout_marginStart="@dimen/mylocation_listitem_horizontal_margin"
        android:layout_marginEnd="@dimen/mylocation_listitem_horizontal_margin">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="@dimen/ic_delete"
            android:layout_height="@dimen/ic_delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padd_10"
            android:src="@drawable/ic_delete_white_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padd_10"
            android:layout_toLeftOf="@id/delete_icon"
            android:text="@string/delete"
            android:textColor="#fff"
            android:textSize="13dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/mylocation_listitem_horizontal_margin"
            android:layout_marginRight="@dimen/mylocation_listitem_horizontal_margin"
            android:layout_marginStart="@dimen/mylocation_listitem_horizontal_margin"
            android:layout_marginEnd="@dimen/mylocation_listitem_horizontal_margin"
            android:layout_marginBottom="@dimen/mylocation_listitem_vertical_margin"
            android:layout_marginTop="@dimen/mylocation_listitem_vertical_margin"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/darkGrey"
            android:text="@string/app_name"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darkGrey"
            android:layout_below="@id/title"
            android:layout_marginLeft="@dimen/mylocation_listitem_horizontal_margin"
            android:layout_marginRight="@dimen/mylocation_listitem_horizontal_margin"
            android:layout_marginStart="@dimen/mylocation_listitem_horizontal_margin"
            android:layout_marginEnd="@dimen/mylocation_listitem_horizontal_margin" />

    </RelativeLayout>

</FrameLayout>